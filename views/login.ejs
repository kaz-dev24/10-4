<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/gallery.css">
    <style>
        /* Center Login Form */
        .login-container {
            width: 100%;
            max-width: 400px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        /* Adjust button width */
        .btn {
            width: 100%;
        }

        /* Style for the legacy password toggle */
        .form-check-label {
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
<!-- Wiki Button -->
<div style="position: absolute; top: 10px; right: 10px;">
    <a href="/wiki" class="btn btn-outline-info btn-sm" title="Learn about password security">!</a>
</div>

    <div class="login-container container">
        <h2 class="text-center">Login</h2>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>

            <!-- Legacy password toggle -->
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="legacyToggle" name="legacy" value="true">
                <label class="form-check-label" for="legacyToggle">Legacy Password (Plaintext)</label>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
            <a href="/" class="btn btn-secondary mt-2">Return to Home</a>
            <a href="/change_password" class="btn btn-warning mt-2">Change Password</a>
        </form>
    </div>

</body>
</html>
