<!DOCTYPE html>
<html lang="en">
<head>
    <title>Change Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/gallery.css">
    <style>
        /* Center Form */
        .password-container {
            width: 100%;
            max-width: 400px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>

    <div class="password-container container">
        <h2 class="text-center">Change Password</h2>
        <form action="/change_password" method="POST">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Current Password</label>
                <input type="password" class="form-control" name="current_password" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="oldPassword" name="old_password">
                <label class="form-check-label" for="oldPassword">Old (Unhashed) Password</label>
            </div>
            
            <div class="mb-3">
                <label class="form-label">New Password
                    <span data-bs-toggle="tooltip" title="In order to ensure secuirty, please use at least 10 characters, mix uppercase, lowercase, numbers, and symbols (!@#$%^&*)">
                        üîç
                    </span>
                </label>
                <input type="password" class="form-control" name="new_password" id="new_password" required>
                <div class="strength-meter">
                    <div class="strength-bar">

                    </div>
                </div>
                <p id="strength-text" class="">Strength: Vulnerable

                </p>
            </div>
        
            <button type="submit" class="btn">Update Password</button>
            <a href="/" class="btn mt-2">Return to Home</a>
        </form>
    </div>
<script src="pwd_validator.js"></script>
</body>
</html>
